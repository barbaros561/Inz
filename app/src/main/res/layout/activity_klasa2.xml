<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView02"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvKlasa2k2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:text="Klasa 2"
                android:textSize="46sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnKlasa2Quiz"
                android:layout_width="250sp"
                android:layout_height="60sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/quiz_bd"
                android:text="Quiz"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnKlasa2Geometria" />

            <Button
                android:id="@+id/btnKlasa2Zegar"
                android:layout_width="250sp"
                android:layout_height="60sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/zegary_bg"
                android:text="Zegar"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnKlasa2Liczby" />

            <Button
                android:id="@+id/btnKlasa2Geometria"
                android:layout_width="250sp"
                android:layout_height="60sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/geometria_bd"
                android:text="Geometria"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnKlasa2Zegar" />

            <Button
                android:id="@+id/btnKlasa2Liczby"
                android:layout_width="250sp"
                android:layout_height="60sp"
                android:layout_marginTop="80dp"
                android:background="@drawable/liczby_bg"
                android:text="Liczby"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvKlasa2k2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</ScrollView>