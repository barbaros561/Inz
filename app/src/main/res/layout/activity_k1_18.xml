<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".k1Questions.k1_18">


    <Button
        android:id="@+id/btnK1_18A"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/question_button"
        android:text="@string/time4"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnK1_18C"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnK1_18D"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/question_button"
        android:text="@string/time10"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvK1_18Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/Clock"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnK1_18C"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/question_button"
        android:text="@string/time1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnK1_18B"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/question_button"
        android:text="@string/time2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnK1_18D"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvK1_18Correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/correct"
        android:textColor="@color/colorCorrect"
        android:textSize="72sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvK1_18Wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/wrong"
        android:textColor="@color/colorWrong"
        android:textSize="72sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivK1_18Question"
        android:layout_width="275dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvK1_18Question"
        app:srcCompat="@drawable/zegar1435" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secondK1_18Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/ivK1_18Tablica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tablica" />

        <Button
            android:id="@+id/btnK1_18Confirm"
            android:layout_width="92dp"
            android:layout_height="90dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="210dp"
            android:text="Button"
            app:layout_constraintStart_toStartOf="@+id/ivK1_18Tablica"
            app:layout_constraintTop_toTopOf="@+id/ivK1_18Tablica" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:fontFamily="@font/finger_paint"
            android:text="@string/time10"
            android:textColor="@color/colorWhite"
            android:textSize="42sp"
            app:layout_constraintEnd_toEndOf="@+id/ivK1_18Tablica"
            app:layout_constraintStart_toStartOf="@+id/ivK1_18Tablica"
            app:layout_constraintTop_toTopOf="@+id/ivK1_18Tablica" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="198dp"
            android:layout_height="150dp"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="@+id/ivK1_18Tablica"
            app:layout_constraintStart_toStartOf="@+id/ivK1_18Tablica"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:srcCompat="@drawable/zegar1435b" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>